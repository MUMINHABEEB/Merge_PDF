{
  "name": "merge-pdf-app",
  "version": "0.1.4",
  "description": "Desktop PDF merge tool",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
  "dist": "electron-builder",
  "inno": "\"C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe\" installer.iss"
  },
  "build": {
    "appId": "com.example.mergepdf",
    "productName": "MergePDF",
    "files": [
      "**/*",
      "!installer.nsh"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1"
  }
}
